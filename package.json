    "openai-api": "^1.3.1",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "smile2emoji": "^3.1.1",
    "stats.js": "^0.17.0",
    "three": "./packages/three",
    "three-mesh-bvh": "^0.5.16",
    "three-subdivide": "^1.1.0",

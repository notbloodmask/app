{
  "name": "webaverse-app",
  "version": "0.0.1",
  "description": "",
  "main": "index.mjs",
  "scripts": {
    "win:start:dev": "cross-env NODE_ENV=development node index.mjs",
    "win:start:prod": "cross-env NODE_ENV=production node index.mjs -p",
    "unix:start:dev": "cross-env NODE_ENV=development sudo $(which node) index.mjs",
    "unix:start:prod": "cross-env NODE_ENV=production sudo $(which node) index.mjs -p",
    "build": "rimraf dist && cross-env OUTPUT_EXPORTS=true vite build",
    "setup:test": "cd test && npm i",
    "test": "cd test && npm run test",
    "test-e2e": "cd test/e2e/ && npm run start",
    "start-pm2": "pm2-runtime index.mjs -p --secret $PM2_SECRET_KEY --public $PM2_PUBLIC_KEY --no-auto-exit --instances 1 --restart-delay 60000",
    "lint": "eslint --fix --quiet --ext .js,.jsx .",
    "prettier": "prettier --write ."
  },
